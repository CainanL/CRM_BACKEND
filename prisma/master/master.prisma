generator masterClient {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/master-client"
}

datasource masterDb {
  provider = "postgresql"
  url      = env("MASTER_DATABASE_URL")
}

model Tenant {
  id   String @id @default(uuid())
  name String // Nome da empresa

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users User[]

  @@map("tenants")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  UserPolicyRule UserPolicyRule[]

  @@map("users")
}

model Policy {
  id          String  @id @default(uuid())
  name        String // Nome da política
  description String? // Descrição opcional

  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  UserPolicyRule UserPolicyRule[]

  @@map("policies")
}

model Rule {
  id       String @id @default(uuid())
  name     String // Nome do papel

  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  UserPolicyRule UserPolicyRule[]

  @@map("rules")
}

model UserPolicyRule {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  policy   Policy @relation(fields: [policyId], references: [id])
  policyId String

  rule   Rule   @relation(fields: [ruleId], references: [id])
  ruleId String

  assignedAt DateTime @default(now())

  @@unique([userId, policyId, ruleId])
  @@map("user_policy_rules")
}

model EmailValidatorCode {
  id     String @id @default(uuid())
  email  String @unique
  code   String
  attemp Int    @default(0)

  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("email_validator_codes")
}
